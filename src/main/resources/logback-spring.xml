<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 控制台输出配置 - 确保日志输出到标准输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
    </root>
    
    <!-- 应用程序日志 -->
    <logger name="com.example.moviesapi" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
    
    <!-- sql日志 -->
    <logger name="com.example.moviesapi.Mapper" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>